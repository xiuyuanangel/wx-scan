
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f8f8f8;
}

/* 商品列表样式 */
.scan-list {
  flex: 1;
  padding: 20rpx;
}

.list-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx 100rpx 20rpx 20rpx;
  margin-bottom: 20rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.item-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 10rpx;
}

.item-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
  margin-right: 20rpx;
}

.item-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 10rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 4rpx;
}

.quantity-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
  background: #fff;
  border-radius: 6rpx;
}

.quantity-btn:active {
  opacity: 0.8;
}

.quantity {
  min-width: 60rpx;
  text-align: center;
  font-size: 26rpx;
  color: #333;
}

.item-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.item-detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-time, .item-barcode {
  font-size: 24rpx;
  color: #999;
}

.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 100rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-btn icon {
  transform: scale(1.2);
}

.delete-btn:active {
  background-color: rgba(0, 0, 0, 0.05);
}

/* 空状态样式 */
.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 底部操作区样式 */
.footer {
  padding: 20rpx 30rpx;
  width: 98%;
  background: #fff;
  border-top: 1rpx solid #eee;
}

.total-section {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}

.total-label {
  font-size: 28rpx;
  color: #666;
}

.total-amount {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-left: 10rpx;
}

.action-section {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  gap: 20rpx;
}

.clear-btn {
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border: none;
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
}

.scan-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #fff;
  background: #07c160;
  border: none;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
}

.scan-btn icon {
  margin-right: 10rpx;
}

button::after {
  border: none;
}

button:active {
  opacity: 0.8;
}