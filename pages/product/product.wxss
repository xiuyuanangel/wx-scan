.container {
  height: 100vh;
  background: #f8f8f8;
}

/* 列表样式 */
.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;  
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  width: 98%;
}

.header-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  width: 120%;
}

.add-btn {
  font-size: 28rpx;
  color: #07c160;
  background: none;
  padding: 0;
  margin-left: auto;
}

.product-list {
  height: 100%;
}

.product-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 30rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.item-info {
  flex: 1;
}

.item-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.item-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.item-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.item-barcode {
  font-size: 24rpx;
  color: #999;
}

.item-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  padding: 10rpx;
}

/* 弹出层样式 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

/* 表单样式 */
.form-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease-out;
  z-index: 101;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
}

.form-container.show {
  transform: translateY(0);
}

.form-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-shrink: 0;
}

.form-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.close-btn {
  padding: 10rpx;
}

.form-content {
  padding: 30rpx;
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.form-content scroll-view {
  height: 100%;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.form-input-wrap {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-top: 8rpx;
  margin-right: 30px;
}
  
.form-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.scan-btn {
  padding: 0rpx;
  margin-right: 0px;
}

.form-actions {
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  border-top: 1rpx solid #eee;
  flex-shrink: 0;
}

.save-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
  margin-right: 10rpx;
}

.save-btn {
  background: #07c160;
  color: #fff;
  margin-left: 10rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 按钮样式重置 */
button {
  padding: 0;
  margin: 0;
  line-height: 1;
}

button::after {
  border: none;
}

button:active {
  opacity: 0.8;
}