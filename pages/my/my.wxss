.menu-list {
  width: auto;
  background: #fff;
  margin: 0 30rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.menu-item {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  overflow: hidden;
}

.menu-item:active {
  background-color: #f5f5f5;
}

.menu-item::after {
  content: '';
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: 0;
  height: 1px;
  background: #eee;
}

.menu-item:last-child::after {
  display: none;
}

.menu-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.menu-text {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.version {
  position: fixed;
  bottom: 40rpx;
  width: 100%;
  text-align: center;
  color: #999;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.checking-text {
  margin-top: 8rpx;
  color: #07c160;
  font-size: 22rpx;
