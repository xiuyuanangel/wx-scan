
.scan-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
  padding: 40rpx;
}

.icon {
  margin-bottom: 20rpx;
}

.btn-text {
  color: #07c160;
  font-size: 32rpx;
}

.result-container {
  margin: 40rpx 80rpx 0;
  width: 96%;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.result-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: bold;
}

.result-content {
  width: 100%;
  box-sizing: border-box;
}

.result-text, .wifi-info, .barcode-info {
  font-size: 26rpx;
  background: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  position: relative;
  box-sizing: border-box;
  width: 100%;
}

.result-text {
  color: #666;
  word-break: break-all;
  border: 1px solid #e8e8e8;
  transition: all 0.2s;
  user-select: none;
  -webkit-user-select: none;
}

.wifi-info {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.wifi-item {
  margin-bottom: 16rpx;
  display: flex;
  align-items: flex-start;
  width: 100%;
  box-sizing: border-box;
}

.wifi-item:last-child {
  margin-bottom: 0;
}

.wifi-label {
  font-size: 26rpx;
  color: #999;
  width: 150rpx;
  flex-shrink: 0;
}

.wifi-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
  word-wrap: break-word;
  min-width: 0;
  line-height: 1.4;
}

.wifi-actions {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  padding: 16rpx 0 0;
  border-top: 1rpx solid #eee;
  gap: 20rpx;
}

.copy-btn {
  min-width: 90rpx;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  text-align: center;
  border-radius: 20rpx;
  background: #07c160;
  color: #fff;
  border: none;
  box-sizing: border-box;
  box-shadow: 0 2rpx 4rpx rgba(7, 193, 96, 0.2);
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.copy-btn::after {
  border: none;
}

.copy-btn:active {
  transform: scale(0.96);
  opacity: 0.8;
}

.result-text:active {
  background-color: #f5f5f5;
  transform: scale(0.98);
  opacity: 0.8;
}

.copy-tip {
  font-size: 22rpx;
  color: #999;
  text-align: center;
  margin-top: 12rpx;
  padding: 4rpx 12rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 4rpx;
  display: inline-block;
}

.tip-text {
  margin-top: 40rpx;
  color: #999;
  font-size: 28rpx;
  text-align: center;
}